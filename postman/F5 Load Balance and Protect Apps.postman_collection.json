					"event": [
						{
							"listen": "test",
							"script": {
								"id": "947a563b-2c40-458d-b598-87dcc1527cb7",
								"exec": [
									"pm.test(\"Get User's EAP Record\", function() {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"EAP_RECORD\", jsonData.record);",
